<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path(@list.photo.key, :ar => 1.8, :crop => "crop") %>');">
  <div class="container">
    <h1 class="text-color-turquoise"><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-3">
  <h3 class="mb-3">Movie list:</h3>

    <% @list.bookmarks.each do |bookmark| %>

      <div class="card-movie mb-3">
        <%= image_tag bookmark.movie.poster_url %>
        <div class="card-product-infos">
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
          <p>My comment: <%= bookmark.comment %></p>
          <%= link_to bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>

    <% end %>

  <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn-flat' %>

</div>
