<h1>Add a movie to the list: <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
<%= f.association :movie %>
<%= f.input :comment %>
<%= f.submit class: 'btn btn-primary' %>
<% end %>

<hr>

<%= link_to 'Back to the list', list_path(@list), class: 'btn btn-primary' %>
<%= link_to 'All lists', lists_path, class: 'btn btn-primary' %>
