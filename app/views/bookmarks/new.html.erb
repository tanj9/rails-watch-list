<div id="new-banner" class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/dqcismds3/image/upload/ar_16:9,c_crop/v1645366557/ruvq074kzpma51tc9mf8.jpg');">
  <div class="container">
    <h2>Add a movie to the <%= link_to list_path(@list) do %>
      <span class="text-color-turquoise"><%= @list.name %></span>
    <% end %> list</h2>
    <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: Movie.order(:title) %>
    <%= f.input :comment %>
    <%= f.submit 'Add movie', class: 'btn-flat'%>
    <% end %>
  </div>
</div>
